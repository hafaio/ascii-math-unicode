{
  "private": true,
  "name": "ascii-math-unicode",
  "version": "1.1.0",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "files": [
    "/manifest.json",
    "/images/*.png",
    "/public/**/*",
    "/favicon.ico",
    "/*.js",
    "/out/**/*"
  ],
  "scripts": {
    "fmt": "prettier --write '*.json' 'src/**/*.ts' 'pages/**/*tsx' '*.mjs'",
    "dev": "next dev",
    "lint": "tsc && eslint --cache 'src/**/*.ts' 'pages/**/*.tsx' && next lint",
    "test": "jest --coverage",
    "build": "node build.mjs && next build && next export",
    "prepack": "yarn build",
    "postpack": "[ -f package.tgz ] && < package.tgz tar2zip > ascii-math-unicode.zip && rm package.tgz"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/material": "^5.6.4",
    "@next/eslint-plugin-next": "^12.1.6",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/chrome": "^0.0.183",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.4",
    "babel-jest": "^28.0.3",
    "chalk": "4.1.2",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.0.3",
    "next": "^12.1.6",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tar-to-zip": "^3.0.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "prettier",
      "jest",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@next/next/recommended"
    ],
    "rules": {
      "@next/next/no-img-element": "off",
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "fixme"
          ]
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.0"
}
