{
  "name": "ascii-math-unicode",
  "version": "1.0.0",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '{,.}*.{js,json,html}' '{src,lib,test}/**/*.{ts,tsx}'",
    "build": "esbuild src/worker.ts --bundle --minify --outfile=service_worker.js && esbuild src/convert.ts --bundle --minify --outfile=dist/convert.bundle.js && esbuild src/options.tsx --bundle --minify --outfile=dist/options.bundle.js",
    "test": "jest --coverage",
    "lint": "tsc --noEmit && eslint {src,lib,test}/**/*.{ts,tsx}",
    "package": "zip ascii-math-unicode.zip manifest.json LICENSE dist/*.bundle.js images/*.png images/*.svg options.html service_worker.js"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "prettier",
      "jest",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@chakra-ui/react": "1.5.2",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11",
    "@types/chrome": "^0.0.145",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "esbuild": "^0.12.12",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "framer-motion": "^4.1.17",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "private": true
}
