{
  "name": "ascii-math-unicode",
  "version": "1.0.0",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write {,.}*.{json,html} {src,lib,test}/**/*.{ts,tsx} rollup.config.js",
    "build": "rollup -c --failAfterWarnings",
    "test": "jest --coverage",
    "lint": "tsc --noEmit && eslint {src,lib,test}/**/*.{ts,tsx}",
    "package": "zip ascii-math-unicode.zip manifest.json LICENSE dist/*.bundle.js images/*.png images/*.svg options.html service_worker.js"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "prettier",
      "jest",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@chakra-ui/react": "^1.5.2",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/chrome": "^0.0.134",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "framer-motion": "^4",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.45.2",
    "ts-jest": "^26.5.5",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "private": true
}
