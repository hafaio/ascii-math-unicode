{
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "pages/**/*.tsx"],
  "exclude": ["node_modules"]
}
